{
    "manifest_version": 2,
    "name": "Text Highlighter",
    "version": "1.2",
    "description": "Highlight text on web pages and view saved highlights",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "icons": {
      "16": "logo16.svg",
      "48": "logo48.svg",
      "128": "logo128.svg"
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_title": "IT Text Highlighter",
      "default_icon": {
        "16": "logo16.svg",
        "48": "logo48.svg",
        "128": "logo128.svg"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["style.css"]
      }
    ]
}
  
